#root 
  font-family: "Roboto", sans-serif
  font-weight: 500
  font-style: normal
  max-width: 1280px
  margin: 0 auto
  padding: 2rem
  text-align: center

.main
.counters
  display: flex
  align-items: center
  justify-content: center
  row-gap: 2rem

.main
  flex-direction: column

.counters
  width: 100%
  height: 100px
  border-radius: 20px
  column-gap: 2rem

.counters-dark
  background: rgba(131, 102, 86, 0.1)

.counters-light
  background: green